{
  "compilerOptions": {
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "jsx": "react",
    "module": "amd",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "reactNamespace": "jsxFactory",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "examples/*.ts*",
    "typings/*.ts"
  ]
}
